<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="80dp">

    <Switch
        android:id="@+id/darkModeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Темная тема" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Почему она не включена по всегда?"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />

    <Switch
        android:id="@+id/fontSizeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Режим Пенсия" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Если вы пенсионер нажмите сюда для увеличения шрифта"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/fileStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Файл не найден" />


    <Button
        android:id="@+id/checkFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверить наличие файла" />

    <Button
        android:id="@+id/deleteFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить файл" />

    <Button
        android:id="@+id/restoreFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Восстановить файл" />
</LinearLayout>
